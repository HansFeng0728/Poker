using UnityEngine;
using System.Collections;
using System.Collections.Generic;

public class ShuffleCards : MonoBehaviour {

    public GameObject Card1;
    public GameObject Card2;
    public GameObject Card3;
    public GameObject card;
    public int sapce;
    
    private List<UISprite> cardsBg = new List<UISprite>();

    private int count = Manager.player0.ShufflePokerList.CardList.Count - 1; 
    
    // Use this for initialization
    void Start()
    {
        InitCards();
        RefreshCards();
        Manager.shuffleIndex = -1;
        Manager.shuffleLevel = 2;
    }
    
    // Update is called once per frame
    void Update () 
    {
        count = Manager.player0.ShufflePokerList.CardList.Count - 1;
    }

    public void ClickShuffleCards()
    {     
        RefreshCards();
        if (count > 0)
        {
            Manager.ChoosedCardsReset();
            ShowCards();            
        }
    }

    void RefreshCards()
    {
        for (int i = 0; i < Manager.shuffleCards.Count; i++)
        {
            Manager.shuffleCards[i].SetActive(false);
        }
    }
    
    void ShowCards()
    {
        Manager.shuffleLevel = -1;
        if (Manager.shuffleIndex >= count)
            Manager.shuffleIndex = -1;
        for (int i = 0; Manager.shuffleIndex < count && i < 3; i++)
        {
            //先后顺序！先激活才能改
            Manager.shuffleCards[i].SetActive(true);
            Manager.shuffleLevel++;
            Manager.shuffleIndex++; 

            UISprite bg = Manager.shuffleCards[i].transform.GetComponentInChildren<UISprite>();
            Debug.Log(Manager.shuffleIndex);
            bg.spriteName = Manager.player0.ShufflePokerList.CardList[Manager.shuffleIndex].Number.ToString();  

                                           
        }        
    }

    void InitCards()
    {
        Manager.shuffleCards.Add(Card1);
        Manager.shuffleCards.Add(Card2);
        Manager.shuffleCards.Add(Card3);
        MethodAllCards.InitCardType(Manager.shuffleCards[0], 1);
        MethodAllCards.InitCardType(Manager.shuffleCards[1], 1);
        MethodAllCards.InitCardType(Manager.shuffleCards[2], 1);
    }

}
